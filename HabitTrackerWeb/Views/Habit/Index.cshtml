@model List<Habit>
<head>
</head>

<body>
    <h2 class="py-2">Habit View</h2>
    <a asp-controller="Habit" asp-action="Create" class="btn btn-primary m-2">
        Create New Habit
    </a>
    <div class="col-9">
    <table class="table table-bordered container-lg" style="text-align: center" >
            <thead>
                <tr>
                <th style="width:30%">Habit Name</th>
                <th style="width:10%">Quantity Per Week</th>
                <th style="width:20%"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.QuantityPerWeek</td>
                        <td>

                        <a asp-controller="Habit" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary">
                            Edit
                            </a>
                        <a asp-controller="Habit" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-primary">
                            Delete
                        </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        </div>

</body>
