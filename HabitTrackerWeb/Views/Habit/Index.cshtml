@model List<Habit>
<head>
</head>

<body>
    <h2 class="p-4 text-center">All habit list</h2>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-bordered container-lg " style="text-align: center">
                <thead>
                    <tr>
                        <th style="width:30%">Habit Name</th>
                        <th style="width:20%">Since when</th>
                        <th style="width:15%">How many weeks</th>
                        <th style=""></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.habitWeeks.LastOrDefault().WeekNumber, @obj.habitWeeks.LastOrDefault().Year</td>
                            <td>@obj.habitWeeks.Count()</td>
                            <td>
                                <div class="row">
                                    <div class="col px-2 px-md-3">
                                        <a asp-controller="Habit" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-outline-primary w-100">
                                            Edit
                                        </a>
                                    </div>
                                    <div class="col px-2 px-md-3">
                                        <a asp-controller="Habit" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-primary w-100">
                                            Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
