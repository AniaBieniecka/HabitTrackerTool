@model List<Habit>
<head>
</head>

<body>
    <h2 class="p-4 text-center">All habit list</h2>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-bordered container-lg " style="text-align: center">
                <thead>
                    <tr>
                        <th style="width:30%">Habit Name</th>
                        <th style="width:20%">Week number, year</th>
                        <th style="width:15%">Quantity Per Week</th>
                        <th style=""></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var habit in Model)
                    {
                        foreach(var obj in habit.habitWeeks)
                        {
                        <tr>
                            <td>@habit.Name</td>
                            <td>@obj.Year</td>
                            <td>@obj.WeeklyGoal</td>
                            <td>
                                <div class="row">
                                    <div class="col px-2 px-md-3">
                                        <a asp-controller="HabitWeek" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-outline-primary w-100">
                                            Edit
                                        </a>
                                    </div>
                                    <div class="col px-2 px-md-3">
                                            <a asp-controller="HabitWeek" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-primary w-100">
                                            Delete
                                        </a>
                                    </div>
                                </div>



                            </td>
                        </tr>                            
                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
</body>
