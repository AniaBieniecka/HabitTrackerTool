@model HabitWeek


<h2 class="py-4 px-2">Are you sure you want to delete this habit?</h2>

<form method="post">
    <input asp-for="@Model.Id" hidden />
    <div class="col-lg-6">
        <div class="form-floating m-2">
            <input asp-for="@Model.habit.Name" disabled class="form-control"></input>
            <label asp-for="@Model.habit.Name" class="text-dark"></label>
            <span asp-validation-for="@Model.habit.Name" class="text-primary"></span>
        </div>
        <div class="form-floating m-2">
            <input asp-for="WeekNumber" disabled class="form-control"></input>
            <label asp-for="WeekNumber" class="text-dark"></label>
            <span asp-validation-for="WeekNumber" class="text-primary"></span>
        </div>
        <div class="form-floating m-2">
            <input asp-for="Year" disabled class="form-control"></input>
            <label asp-for="Year" class="text-dark"></label>
            <span asp-validation-for="Year" class="text-primary"></span>
        </div>
        <div class="form-floating m-2">
            <input asp-for="WeeklyGoal" disabled class="form-control"></input>
            <label asp-for="WeeklyGoal" class="text-dark"></label>
            <span asp-validation-for="WeeklyGoal" class="text-primary"></span>
        </div>
        <button type="submit" class="btn btn-primary m-2 w-25">Yes, definitely</button>
        <a asp-controller="HabitRealization" asp-action="HabitsCurrentWeek" class="btn btn-primary w-25">
            No, go back to List
        </a>
    </div>

</form>

