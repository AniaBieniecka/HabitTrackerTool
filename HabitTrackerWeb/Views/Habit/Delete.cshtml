@model Habit


<h2 class="py-2">Are you sure you want to delete below habit?</h2>

<form method="post">
    <input asp-for="@Model.Id" hidden />
    <div class="form-floating m-2">
        <input asp-for="Name" disabled class="form-control"></input>
        <label asp-for="Name" class="text-dark"></label>
        <span asp-validation-for="Name" class="text-primary"></span>
    </div>
    <div class="form-floating m-2">
        <input asp-for="QuantityPerWeek" disabled class="form-control"></input>
        <label asp-for="QuantityPerWeek" class="text-dark"></label>
        <span asp-validation-for="QuantityPerWeek" class="text-primary"></span>
    </div>
    <button type="submit" class="btn btn-primary m-2" width="50">Yes, definitely</button>
    <a asp-controller="HabitRealization" asp-action="HabitsCurrentWeek" class="btn btn-primary">
        Back to List
    </a>
</form>

