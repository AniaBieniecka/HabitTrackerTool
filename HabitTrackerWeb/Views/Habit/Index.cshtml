@model List<Habit>

<h2 class="py-2">Habit List</h2>
<a asp-controller="Habit" asp-action="Create" class="btn btn-primary">
    Create New Habit
</a>

<table class="table  table-striped">
    <thead>
        <tr>
            <th>Habit Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

         @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>

                    <a asp-controller="Habit" asp-action="Edit" asp-route-id="@obj.Id" class="btn">
                    </a>
                    <a asp-controller="Habit" asp-action="Delete" asp-route-id="@obj.Id" class="btn">
                    </a>

                </td>
            </tr>
        }           

    </tbody>
</table>
